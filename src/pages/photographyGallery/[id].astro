---
import "../../styles/global.css";
import { getCollection } from "astro:content";
import { getPhotographyAlbumPhotos } from "../../utils/photographyAlbums";
import { Image } from 'astro:assets';
import Navbar from "../../components/navbar.astro";

export async function getStaticPaths() {
    const photographyAlbums = await getCollection("photographyAlbums");

    const paths = Object.values(photographyAlbums).map((photographyAlbum) => {
        return {
            params: {
                id: photographyAlbum.id,
            },
            props: {
                photographyAlbum,
            },
        };
    });

    return paths;
}

const { photographyAlbum } = Astro.props;
const images = await getPhotographyAlbumPhotos(photographyAlbum.id);
---

<!-- <Navbar /> -->
<div class="text-center my-16 mb-32 bg-[url(../assets/personalSiteBackground.png)] bg-cover">
    <h1 class="text-5xl xl:text-8xl font-bold font-handwriting">
        {photographyAlbum.data.title}
    </h1>
    <p class="text-lg xl:text-2xl my-4">
        {photographyAlbum.data.description}
    </p>
    <p class="text-2xl my-4 text-center font-display">
        <a href="/photography/" class="text-black hover:underline">Go back</a>
    </p>

    <div class="mx-auto container my-8 sm:columns-2 md:columns-3 lg:columns-4 xl:columns-5">
        {
            images.map((image) => (
                <Image
                    src={image}
                    alt={`Image from ${photographyAlbum.data.title} album`}
                    format="avif"
                    quality={50}
                    class="rounded-sm mb-4 border border-transparent hover:border-gray-300 transition-all duration-300 ease-in-out hover:shadow-lg"
                    loading="lazy"
                />
            ))
        }
    </div>


</div>

